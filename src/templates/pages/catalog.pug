extends ../template

block title
  title Каталог товаров

block content
  main.page-main

    section.catalog
      header.catalog__header
        h2.content-title.content-title_catalog Каталог товаров
      .catalog__wrapper
        ul.catalog__list
          li.catalog__item
            .catalog__picture
              img.catalog__picture-image(src="http://placehold.it/260x195", alt="Зайчик-попрыгайчик")
            .catalog__desc
              h2.catalog__title Зайчик-попрыгайчик
              p.catalog__info Рост 30 см, вес 200 г
              .catalog__price
                span.catalog__price-value 1 200 руб.
                .catalog__icon
          li.catalog__item
            .catalog__picture
              img.catalog__picture-image(src="http://placehold.it/260x195", alt="Корзинка для белья")
            .catalog__desc
              h2.catalog__title Корзинка для белья
              p.catalog__info Диаметр 15 см, высота 10 см
              .catalog__price
                span.catalog__price-value 690 руб.
                .catalog__icon
          li.catalog__item
            .catalog__picture
              img.catalog__picture-image(src="http://placehold.it/260x195", alt="Большая корзинка для игрушек")
            .catalog__desc
              h2.catalog__title Большая корзинка для игрушек
              p.catalog__info Диаметр 30 см, высота 30 см
              .catalog__price
                span.catalog__price-value 1 500 руб.
                .catalog__icon
    section.production
      .production__wrapper
        h2.production__title Процесс производства
        .production__videoplayer.videoplayer
          img.videoplayer__image(src="http://placehold.it/260x150", alt="Процесс производства")
        .production__content
          p.production__text По просьбам наших любимых фолловеров мы сняли для вас подробное видео о том, как появляются наши товары.
          a.button.button_catalog(href="form.html") Сделать заказ
